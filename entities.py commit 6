import pygame

PLAYER_SPEED = 5
BULLET_SPEED = 7

# Player, Bullet, Enemy (same as earlier)

class Barrier:
    def __init__(self, x, y):
        self.health = 10
        self.width = 60
        self.height = 40
        self.color = (0, 200, 50)
        self.rect = pygame.Rect(x, y, self.width, self.height)

    def take_damage(self):
        self.health -= 1
        self.height -= 3
        self.rect.height = self.height

    def draw(self, window):
        if self.health > 0:
            pygame.draw.rect(window, self.color, self.rect)
